<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FashionApp.Page2"
             Title="Page2"
             BackgroundColor="LightGray">
    <ScrollView>
        <VerticalStackLayout>
            <Button 
            x:Name="NavigateButton"
            Text="Back to Main Page"
            Clicked="OnNavigateClicked"
            HorizontalOptions="Center"/>
            <Label 
            Text="Page 2"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button 
            x:Name="SelectClothImageButton"
            Text="Select Cloth Image"
            Clicked="OnSelectClothImageClicked"
            HorizontalOptions="Center"/>

            <Image
            x:Name="SelectedClothImage"
            HeightRequest="300"
            WidthRequest="300"
            Aspect="AspectFit"
            IsVisible="False"/>

            <Button 
            x:Name="SelectBodyImageButton"
            Text="Select Body Image"
            Clicked="OnSelectBodyImageClicked"
            HorizontalOptions="Center"/>

            <Image
            x:Name="SelectedBodyImage"
            HeightRequest="300"
            WidthRequest="300"
            Aspect="AspectFit"
            IsVisible="False"/>

            <HorizontalStackLayout 
                Spacing="20" 
                HorizontalOptions="Center"
                Margin="0,10,0,10">
                <ImageButton
                    x:Name="ClosedJacketImageButton"
                    Source="closed_jacket.png"
                    Clicked="ClosedJacketImageButton_Clicked"
                    HeightRequest="70"
                    WidthRequest="70"
                    CornerRadius="5"
                    BorderColor="Black"
                    BackgroundColor="Transparent"
                    BorderWidth="3"
                    IsEnabled="False"
                    IsVisible="False"/>

                <ImageButton
                    x:Name="OpenJacketImageButton"
                    Source="open_jacket.png"
                    Clicked="OpenJacketImageButton_Clicked"
                    HeightRequest="70"
                    WidthRequest="70"
                    CornerRadius="5"
                    BorderColor="Black"
                    BackgroundColor="Transparent"
                    BorderWidth="3"
                    IsEnabled="False"
                    IsVisible="False"/>
            </HorizontalStackLayout>

            <Button 
            x:Name="CombineImages"
            Text="Create new image"
            Clicked="CombineImagesClicked"
            HorizontalOptions="Center"/>


            
            <ActivityIndicator x:Name="LoadingIndicator"
            IsRunning="False"
            IsVisible="False"   
            Color="Azure"
            HorizontalOptions="Center"/>
          
            <Image x:Name="ResponseImage"
            IsVisible="False"
            Aspect="AspectFit"/>

            <Label x:Name="ResponseText" 
            IsVisible="False"
            FontSize="18"
            HorizontalOptions="Center"/>

            <Button x:Name="SaveButton"
            Text="Save Image"
            Clicked="OnSaveClicked"
            IsVisible="False"
            IsEnabled="False"
            HorizontalOptions="Center"/>


            <Label x:Name="CounterLabel" 
            Text="Created by RedFox - AI Айляк"
            Style="{StaticResource Headline}"
            TextColor="Black"
            FontSize="18"
            HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>