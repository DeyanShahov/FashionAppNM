<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"   
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="FashionApp.MaskEditor"
             Title="Editor Page"
             BackgroundColor="LightGray">
    <Grid RowDefinitions="Auto,*,Auto">
        <VerticalStackLayout Grid.Row="0"
            Spacing="10"
            Padding="30,10">
            <Label
                x:Name="ImageParams"
                Text="Image paramaeters"
                VerticalOptions="Center"
                HorizontalOptions="Center" />

            <Label 
                Text="Select an image from your device"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Button 
                x:Name="SelectImageButton"
                Text="Select Image"
                Clicked="OnSelectImageClicked"
                HorizontalOptions="Center"/>

            <Button 
                x:Name="OpenCameraButton"
                Text="Open Camera"
                Clicked="OnOpenCameraClicked"
                HorizontalOptions="Center"/>

            <Button
                x:Name="PanelButton"
                Text="Open Panel"
                Clicked="PanelButton_Clicked"
                HorizontalOptions="Center"/>

            <Frame x:Name="CameraPanel" IsVisible="False" IsEnabled="False" Padding="20" BackgroundColor="LightGray" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Button 
     Text="Capture"
     Clicked="OnCaptureClicked" />
                    <Button 
Text="Затвори"
Clicked="HidePanelCommand"/>
                    <toolkit:CameraView
                        x:Name="MyCameraView"                       
                        MediaCaptured="MyCameraView_MediaCaptured"  
                        HeightRequest="300"
                        WidthRequest="300"
                        SelectedCamera="{Binding SelectedCamera}"
                        ZoomFactor="{Binding CurrentZoom}"
                        CameraFlashMode="{Binding FlashMode}" />
                  
                </VerticalStackLayout>
            </Frame>

            <!--<Border 
                x:Name="CameraPanel"
                BackgroundColor="LightGray"
                Padding="20"
                StrokeThickness="2"
                Stroke="Black"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">
                <VerticalStackLayout>
                    <Button 
                        Text="Capture"
                        Clicked="OnCaptureClicked" />
                    <Button 
                        Text="Затвори"
                        Clicked="HidePanelCommand"/>
                    <toolkit:CameraView 
            x:Name="MyCameraView" 
            MediaCaptured="MyCameraView_MediaCaptured"  
            HeightRequest="200"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand" 
            IsVisible="False"/>                
                
                </VerticalStackLayout>
            </Border>-->

            <!-- Пример за команда за заснемане --><!--
            <Button
            Grid.Column="0"
            Grid.Row="2"
            Command="{Binding CaptureImageCommand, Source={x:Reference MyCameraView}}"
            Text="Заснеми изображение" />

            <toolkit:CameraView 
            x:Name="MyCameraView"
            Grid.ColumnSpan="3" 
            Grid.Row="0"
            SelectedCamera="{Binding SelectedCamera}"
            ZoomFactor="{Binding CurrentZoom}"
            CameraFlashMode="{Binding FlashMode}" />

            --><!-- Контрол за зум --><!--
            <Slider 
            Grid.Column="0"
            Grid.Row="1"
            Value="{Binding CurrentZoom}"
            Maximum="{Binding SelectedCamera.MaximumZoomFactor, FallbackValue=1}"
            Minimum="{Binding SelectedCamera.MinimumZoomFactor, FallbackValue=1}" />-->

           

        </VerticalStackLayout>

        <Grid Grid.Row="1" x:Name="ImageContainer" HorizontalOptions="Center" VerticalOptions="Center">
            <Image
                x:Name="SelectedImage"
                Aspect="AspectFit"
                SizeChanged="OnImageSizeChanged"/>

            <GraphicsView
                x:Name="DrawingView"
                IsVisible="False"
                StartInteraction="OnStartInteraction"
                DragInteraction="OnDragInteraction"
                EndInteraction="OnEndInteraction"
                HorizontalOptions="Start"
                VerticalOptions="Start"/>
        </Grid>

        <Grid Grid.Row="1">
            <VerticalStackLayout 
                Spacing="20" 
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="0,0,20,0">
                <ImageButton
                    x:Name="ClosedJacketImageButton"
                    Source="closed_jacket.png"
                    Clicked="ClosedJacketImageButton_Clicked"
                    HeightRequest="50"
                    WidthRequest="50"
                    CornerRadius="5"
                    BorderColor="Black"
                    BackgroundColor="Transparent"
                    BorderWidth="3"/>

                <ImageButton
                    x:Name="OpenJacketImageButton"
                    Source="open_jacket.png"
                    Clicked="OpenJacketImageButton_Clicked"
                    HeightRequest="50"
                    WidthRequest="50"
                    CornerRadius="5"
                    BorderColor="Black"
                    BackgroundColor="Transparent"
                    BorderWidth="3"/>
            </VerticalStackLayout>
        </Grid>

        <VerticalStackLayout Grid.Row="2"
            Spacing="10"
            Padding="30,10">

            <HorizontalStackLayout 
                x:Name="DrawingTools" 
                Spacing="10" 
                HorizontalOptions="Center"
                IsVisible="False">

                <VerticalStackLayout Spacing="5">
                    <Label 
                        Text="{Binding Source={x:Reference BrushSlider}, Path=Value, StringFormat='Brush Size: {0:F0}'}"
                        HorizontalOptions="Center"/>
                    <Slider
                        x:Name="BrushSlider"
                        Minimum="5"
                        Maximum="50"
                        Value="20"
                        WidthRequest="200"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <HorizontalStackLayout
                x:Name="DrawingBottons"
                Spacing="10" 
                HorizontalOptions="Center"
                IsVisible="False">
                <Button 
                    Text="Clear" 
                    Clicked="OnClearClicked"/>
                <Button 
                    Text="Undo" 
                    Clicked="OnUndoClicked"/>
                <Button 
                    x:Name="SaveMaskImageButton"
                    Text="Save" 
                    Clicked="OnSaveImageClicked"/>
            </HorizontalStackLayout>

            <Button 
                Text="Back to Main Page"
                Clicked="OnBackButtonClicked"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>