<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FashionApp.Pages.CombineImages"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FashionApp.Pages.ElementsView"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Combine Images"
    BackgroundImageSource="loading_page_image_2.png">

    <ScrollView>
        <VerticalStackLayout>
            <Grid RowDefinitions="Auto, *, Auto">
                <Grid x:Name="CameraPanel" BackgroundColor="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Frame
                        x:Name="test"
                        Grid.Row="0"
                        Padding="0"
                        BackgroundColor="Gray"
                        BorderColor="Black"
                        CornerRadius="0">
                        <toolkit:CameraView
                            x:Name="MyCameraView"
                            HeightRequest="600"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand" />
                    </Frame>

                    <Image
                        x:Name="ContourOverlay"
                        Grid.Row="0"
                        Aspect="Fill"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="False"
                        Source="Camera/top_body.png"
                        VerticalOptions="FillAndExpand" />
                    <Grid
                        x:Name="CameraButtonsPanel"
                        Grid.Row="1"
                        Padding="10"
                        ColumnDefinitions="*,*,*"
                        VerticalOptions="End">
                        <Frame
                            Grid.Column="0"
                            Padding="5"
                            BackgroundColor="Black"
                            CornerRadius="10"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            WidthRequest="120">
                            <Button
                                BackgroundColor="Transparent"
                                Clicked="HidePanelCommand"
                                HorizontalOptions="Center"
                                Text="CLOSE"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Frame>

                        <Frame
                            Grid.Column="1"
                            Padding="0"
                            CornerRadius="40"
                            HeightRequest="80"
                            HorizontalOptions="Center"
                            WidthRequest="80">
                            <Button
                                x:Name="Capture"
                                BackgroundColor="DarkRed"
                                Clicked="OnCaptureClicked"
                                CornerRadius="40"
                                Text="REC"
                                TextColor="White" />
                        </Frame>
                    </Grid>
                </Grid>

                <VerticalStackLayout x:Name="Menu1" Margin="5">

                    <Label
                        x:Name="Tokens"
                        Margin="0,10"
                        FontAttributes="Bold"
                        FontSize="Body"
                        HorizontalOptions="End"
                        Text="0" />

                    <VerticalStackLayout x:Name="InputStack">

                        <Grid Grid.Row="1">
                            <Grid RowDefinitions="Auto,*,Auto">
                                <Grid Grid.Row="3">
                                    <Frame
                                        x:Name="ImagePanelCloth"
                                        Margin="20"
                                        BackgroundColor="#80000000"
                                        BorderColor="Black"
                                        CornerRadius="5"
                                        HasShadow="True"
                                        HeightRequest="340"
                                        WidthRequest="230">
                                        <Frame.Shadow>
                                            <Shadow
                                                Brush="Black"
                                                Opacity="0.99"
                                                Radius="10"
                                                Offset="3, 3" />
                                        </Frame.Shadow>
                                        <Image
                                            x:Name="SelectedClothImage"
                                            Margin="0,20"
                                            Aspect="AspectFit"
                                            HeightRequest="340"
                                            IsVisible="True"
                                            Source="Icons/blank_image_photo.png"
                                            WidthRequest="230">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnSelectedClothImageTapped" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </Frame>

                                    <Frame
                                        x:Name="PanelButtons"
                                        Padding="0"
                                        BackgroundColor="LightGray"
                                        BorderColor="Black"
                                        HasShadow="True"
                                        HeightRequest="220"
                                        IsVisible="False"
                                        WidthRequest="220">
                                        <Frame.Shadow>
                                            <Shadow
                                                Brush="Black"
                                                Opacity="0.99"
                                                Radius="10"
                                                Offset="3, 3" />
                                        </Frame.Shadow>
                                        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
                                            <ImageButton
                                                x:Name="TestGalleryButton"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Clicked="TestGalleryButton_Clicked"
                                                HeightRequest="70"
                                                Source="Icons/images_regular_24.png"
                                                WidthRequest="70" />
                                            <ImageButton
                                                x:Name="TestGalleryButton2"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Clicked="PanelButton_Clicked"
                                                HeightRequest="70"
                                                Source="Icons/camera_regular_24.png"
                                                WidthRequest="70" />
                                            <ImageButton
                                                x:Name="TestGalleryButton3"
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Clicked="OnSelectClothImageClicked"
                                                HeightRequest="70"
                                                Source="Icons/folder_open_regular_24.png"
                                                WidthRequest="70" />
                                        </Grid>
                                    </Frame>
                                </Grid>

                                <Label
                                    x:Name="LabelSelectBody"
                                    Grid.Row="2"
                                    Margin="40"
                                    CharacterSpacing="3"
                                    FontSize="Medium"
                                    HorizontalOptions="Center"
                                    Text="SELECT CLOTH"
                                    TextColor="White"
                                    VerticalOptions="Start" />
                            </Grid>
                        </Grid>

                        <BoxView
                            HeightRequest="1"
                            HorizontalOptions="FillAndExpand"
                            Color="Silver" />

                        <Grid Grid.Row="2">
                            <Grid RowDefinitions="Auto, *, Auto">

                                <StackLayout x:Name="Carosel" Grid.Row="2">
                                    <Frame
                                        Padding="0"
                                        BackgroundColor="Silver"
                                        BorderColor="Black"
                                        HasShadow="True"
                                        HorizontalOptions="End"
                                        VerticalOptions="CenterAndExpand">
                                        <Frame.Shadow>
                                            <Shadow
                                                Brush="Black"
                                                Opacity="0.99"
                                                Radius="10"
                                                Offset="3, 3" />
                                        </Frame.Shadow>
                                        <CarouselView
                                            x:Name="JacketCarousel"
                                            HeightRequest="300"
                                            ItemsSource="{Binding ListAvailableClothesForMacros}"
                                            Loop="True"
                                            PeekAreaInsets="90"
                                            WidthRequest="60">
                                            <CarouselView.ItemsLayout>
                                                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                                            </CarouselView.ItemsLayout>
                                            <CarouselView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <ImageButton
                                                            Aspect="AspectFit"
                                                            Clicked="MacroButton_Clicked"
                                                            CommandParameter="{Binding Data}"
                                                            HeightRequest="70"
                                                            HorizontalOptions="Center"
                                                            Source="{Binding ImagePath}"
                                                            VerticalOptions="Center"
                                                            WidthRequest="60">
                                                            <!--<Image.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding BindingContext.SelectJacketCommand, Source={x:Reference JacketCarousel}}" CommandParameter="{Binding ImagePath}" />
                                                            -->
                                                            <!--<TapGestureRecognizer CommandParameter="{Binding Data}" Tapped="MacroButton_Clicked" />-->
                                                            <!--
                                                        </Image.GestureRecognizers>-->
                                                        </ImageButton>
                                                    </Grid>
                                                </DataTemplate>
                                            </CarouselView.ItemTemplate>
                                        </CarouselView>
                                    </Frame>
                                </StackLayout>

                                <Grid Grid.Row="3">
                                    <Frame
                                        x:Name="ImagePanelBody"
                                        Margin="20"
                                        BackgroundColor="#80000000"
                                        BorderColor="Black"
                                        CornerRadius="5"
                                        HasShadow="True"
                                        HeightRequest="340"
                                        WidthRequest="230">
                                        <Frame.Shadow>
                                            <Shadow
                                                Brush="Black"
                                                Opacity="0.99"
                                                Radius="10"
                                                Offset="3, 3" />
                                        </Frame.Shadow>
                                        <Image
                                            x:Name="SelectedBodyImage"
                                            Aspect="AspectFit"
                                            HeightRequest="340"
                                            IsVisible="True"
                                            Source="Icons/blank_image_photo.png"
                                            WidthRequest="230">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnSelectedBodyImageTapped" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </Frame>

                                    <Frame
                                        x:Name="PanelButtons2"
                                        Padding="0"
                                        BackgroundColor="LightGray"
                                        BorderColor="Black"
                                        HasShadow="True"
                                        HeightRequest="120"
                                        IsVisible="False"
                                        WidthRequest="220">
                                        <Frame.Shadow>
                                            <Shadow
                                                Brush="Black"
                                                Opacity="0.99"
                                                Radius="10"
                                                Offset="3, 3" />
                                        </Frame.Shadow>
                                        <Grid ColumnDefinitions="*,*">
                                            <ImageButton
                                                x:Name="TestGalleryButton5"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Clicked="TestGalleryButton5_Clicked"
                                                HeightRequest="70"
                                                Source="Icons/images_regular_24.png"
                                                WidthRequest="70" />
                                            <ImageButton
                                                x:Name="TestGalleryButton7"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Clicked="OnSelectBodyImageClicked"
                                                HeightRequest="70"
                                                Source="Icons/folder_open_regular_24.png"
                                                WidthRequest="70" />
                                        </Grid>
                                    </Frame>

                                    <Label
                                        Grid.Row="2"
                                        Margin="40"
                                        CharacterSpacing="3"
                                        FontSize="Medium"
                                        HorizontalOptions="Center"
                                        Text="SELECT BODY"
                                        TextColor="White"
                                        VerticalOptions="Start" />
                                </Grid>
                            </Grid>
                        </Grid>

                        <BoxView
                            HeightRequest="1"
                            HorizontalOptions="FillAndExpand"
                            Color="Silver" />

                        <controls:CustomButton
                            x:Name="GoogleAdsButton"
                            Margin="0,20"
                            ButtonText="Google Ads"
                            ButtonWidth="220"
                            Clicked="OnCreateRewardedInterstitialClicked"
                            HorizontalOptions="Center" />

                        <controls:CustomButton
                            x:Name="CombineImagesButton"
                            Margin="0,20"
                            ButtonText="CREATE NEW IMAGE"
                            ButtonWidth="220"
                            Clicked="OnCombineImages_Clicked"
                            HorizontalOptions="Center"
                            IsEnabled="False"
                            IsVisible="False" />

                        <BoxView
                            HeightRequest="1"
                            HorizontalOptions="FillAndExpand"
                            Color="Silver" />

                        <controls:CustomButton
                            x:Name="ShopPage"
                            Margin="0,20"
                            ButtonText="SHOP"
                            ButtonWidth="220"
                            Clicked="ShopPage_Clicked" />

                    </VerticalStackLayout>

                    <VerticalStackLayout
                        x:Name="ResultStack"
                        Margin="40"
                        IsVisible="False">
                        <Grid
                            ColumnDefinitions="auto"
                            HorizontalOptions="Center"
                            RowDefinitions="Auto"
                            VerticalOptions="Center">
                            <Frame
                                x:Name="ResponseImageFrame"
                                BackgroundColor="#80000000"
                                BorderColor="Black"
                                CornerRadius="5"
                                HasShadow="True"
                                HeightRequest="550"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                WidthRequest="350">
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="Black"
                                        Opacity="0.99"
                                        Radius="10"
                                        Offset="3, 3" />
                                </Frame.Shadow>
                                <Image
                                    x:Name="ResponseImage"
                                    Aspect="AspectFill"
                                    HeightRequest="550"
                                    Source="Icons/blank_image_photo_2.png"
                                    WidthRequest="350" />
                            </Frame>

                            <ActivityIndicator
                                x:Name="LoadingIndicator"
                                Margin="0,20"
                                HeightRequest="120"
                                HorizontalOptions="Center"
                                IsRunning="False"
                                IsVisible="False"
                                WidthRequest="120"
                                Color="Azure" />
                        </Grid>

                        <Label
                            x:Name="ResponseText"
                            Margin="0,10"
                            FontSize="18"
                            HorizontalOptions="Center"
                            IsVisible="False" />

                        <HorizontalStackLayout
                            Margin="0,20"
                            HorizontalOptions="Center"
                            Spacing="10">
                            <controls:CustomButton
                                x:Name="SaveButton"
                                ButtonText="SAVE IMAGE"
                                ButtonWidth="220"
                                Clicked="OnSaveClicked"
                                HorizontalOptions="StartAndExpand"
                                IsEnabled="False"
                                IsVisible="False" />

                            <controls:CustomButton
                                x:Name="BackButton"
                                ButtonText="BACK"
                                Clicked="OnBackButtonClicked"
                                HorizontalOptions="End"
                                IsEnabled="True"
                                IsVisible="True" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>