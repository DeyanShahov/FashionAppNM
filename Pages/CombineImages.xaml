<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FashionApp.Pages.CombineImages"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Combine Images"
    BackgroundColor="LightGray">

    <ScrollView>

        <VerticalStackLayout>

            <Grid RowDefinitions="Auto, *, Auto">

                <Grid
                    x:Name="CameraPanel"
                    IsEnabled="False"
                    IsVisible="False">
                    <Frame
                        x:Name="test"
                        Grid.Row="0"
                        BackgroundColor="Gray"
                        BorderColor="Black"
                        CornerRadius="0">
                        <toolkit:CameraView
                            x:Name="MyCameraView"
                            CameraFlashMode="{Binding FlashMode}"
                            HeightRequest="600"
                            HorizontalOptions="CenterAndExpand"
                            SelectedCamera="{Binding SelectedCamera}"
                            ZoomFactor="{Binding CurrentZoom}" />
                    </Frame>

                    <Grid
                        Grid.Row="2"
                        Padding="10"
                        ColumnDefinitions="*,Auto,*"
                        VerticalOptions="End">
                        <Frame
                            Grid.Column="1"
                            CornerRadius="40"
                            HeightRequest="80"
                            HorizontalOptions="Center"
                            WidthRequest="80">
                            <Button
                                x:Name="Capture"
                                BackgroundColor="DarkRed"
                                Clicked="OnCaptureClicked"
                                HeightRequest="40"
                                Text="REC"
                                TextColor="White"
                                WidthRequest="100" />

                        </Frame>

                        <Frame
                            BackgroundColor="Black"
                            HeightRequest="100"
                            HorizontalOptions="Start"
                            ScaleX="0.7"
                            ScaleY="0.7"
                            WidthRequest="120">

                            <Button
                                Clicked="HidePanelCommand"
                                HorizontalOptions="Center"
                                Text="CLOSE"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Frame>
                    </Grid>
                </Grid>

                <VerticalStackLayout
                    x:Name="Menu1"
                    Padding="10"
                    Spacing="15">

                    <Button
                        x:Name="NavigateButton"
                        Margin="0,10"
                        Clicked="OnNavigateClicked"
                        HorizontalOptions="Center"
                        Text="Back to Main Page"
                        WidthRequest="200" />

                    <BoxView
                        HeightRequest="5"
                        HorizontalOptions="FillAndExpand"
                        Color="Black" />


                    <Frame
                        Padding="0"
                        BackgroundColor="LightGray"
                        BorderColor="Black"
                        HasShadow="True"
                        HeightRequest="80"
                        HorizontalOptions="End"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="360">
                        <Frame.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="0.99"
                                Radius="10"
                                Offset="3, 3" />
                        </Frame.Shadow>
                        <HorizontalStackLayout Margin="5" Spacing="20">
                            <ImageButton
                                x:Name="TestGalleryButton"
                                Clicked="TestGalleryButton_Clicked"
                                HeightRequest="70"
                                HorizontalOptions="Start"
                                Source="Icons/images_regular_24.png"
                                WidthRequest="70" />
                            <ImageButton
                                x:Name="TestGalleryButton2"
                                Clicked="PanelButton_Clicked"
                                HeightRequest="70"
                                Source="Icons/camera_regular_24.png"
                                WidthRequest="70" />
                            <ImageButton
                                x:Name="TestGalleryButton3"
                                Clicked="OnSelectClothImageClicked"
                                HeightRequest="70"
                                Source="Icons/folder_open_regular_24.png"
                                WidthRequest="70" />
                            <ImageButton
                                x:Name="TestGalleryButton4"
                                Clicked="SelectClothFromApp_Clicked"
                                HeightRequest="70"
                                Source="Icons/folder_open_solid_24.png"
                                WidthRequest="70" />
                        </HorizontalStackLayout>
                    </Frame>


                    <Grid Grid.Row="1">
                        <VerticalStackLayout
                            Margin="10,0,0,0"
                            HorizontalOptions="Start"
                            IsVisible="False"
                            Spacing="20"
                            VerticalOptions="Center">
                            <ImageButton
                                x:Name="TestGalleryButton"
                                Clicked="TestGalleryButton_Clicked"
                                HeightRequest="40"
                                Source="Icons/images_regular_24.png"
                                WidthRequest="40" />
                            <ImageButton
                                x:Name="TestGalleryButton2"
                                Clicked="PanelButton_Clicked"
                                HeightRequest="40"
                                Source="Icons/camera_regular_24.png"
                                WidthRequest="40" />
                        </VerticalStackLayout>

                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Label
                                CharacterSpacing="3"
                                FontSize="Medium"
                                HorizontalOptions="Center"
                                Text="Select Cloth"
                                TextColor="Blue"
                                TextTransform="Uppercase"
                                VerticalOptions="Center" />

                            <Button
                                x:Name="SelectClothImageButton"
                                Margin="5"
                                Clicked="OnSelectClothImageClicked"
                                HeightRequest="40"
                                IsVisible="False"
                                Text="Select Cloth Image"
                                WidthRequest="160" />

                            <Button
                                x:Name="SelectClothFromApp"
                                Margin="5"
                                Clicked="SelectClothFromApp_Clicked"
                                HeightRequest="40"
                                IsVisible="False"
                                Text="Select Cloth from App"
                                WidthRequest="180" />

                            <Button
                                x:Name="PanelButton"
                                Margin="5"
                                Clicked="PanelButton_Clicked"
                                HeightRequest="40"
                                IsVisible="False"
                                Text="Open Cam"
                                WidthRequest="160" />



                            <Frame
                                Margin="20"
                                BackgroundColor="#80000000"
                                BorderColor="Black"
                                CornerRadius="5"
                                HasShadow="True"
                                HeightRequest="300"
                                WidthRequest="200">
                                <Frame.Shadow>
                                    <Shadow
                                        Brush="Black"
                                        Opacity="0.99"
                                        Radius="10"
                                        Offset="3, 3" />
                                </Frame.Shadow>
                                <Image
                                    x:Name="SelectedClothImage"
                                    Margin="0,20"
                                    Aspect="AspectFill"
                                    HeightRequest="300"
                                    IsVisible="True"
                                    Source="Icons/blank_image_photo.png"
                                    WidthRequest="200" />

                            </Frame>

                        </VerticalStackLayout>

                        <VerticalStackLayout
                            Margin="10,0,0,0"
                            HorizontalOptions="End"
                            IsVisible="False"
                            Spacing="20"
                            VerticalOptions="Center">
                            <ImageButton
                                x:Name="TestGalleryButton3"
                                Clicked="OnSelectClothImageClicked"
                                HeightRequest="40"
                                Source="Icons/folder_open_regular_24.png"
                                WidthRequest="40" />
                            <ImageButton
                                x:Name="TestGalleryButton4"
                                Clicked="SelectClothFromApp_Clicked"
                                HeightRequest="40"
                                Source="Icons/folder_open_solid_24.png"
                                WidthRequest="40" />
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView
                        HeightRequest="5"
                        HorizontalOptions="FillAndExpand"
                        Color="Black" />

                    <Grid Grid.Row="2">
                        <Grid RowDefinitions="Auto, *, Auto">
                            <Grid Grid.Row="1">
                                <Label
                                    CharacterSpacing="3"
                                    FontSize="Medium"
                                    HorizontalOptions="Center"
                                    Text="Select photo"
                                    TextColor="Blue"
                                    TextTransform="Uppercase"
                                    VerticalOptions="Start" />
                                <HorizontalStackLayout
                                    Margin="0,30"
                                    HorizontalOptions="Center"
                                    Spacing="20"
                                    VerticalOptions="Start">
                                    <ImageButton
                                        x:Name="TestGalleryButton5"
                                        Clicked="TestGalleryButton5_Clicked"
                                        HeightRequest="40"
                                        Source="Icons/images_regular_24.png"
                                        WidthRequest="40" />
                                    <ImageButton
                                        x:Name="TestGalleryButton6"
                                        Clicked="PanelButton6_Clicked"
                                        HeightRequest="40"
                                        Source="Icons/camera_regular_24.png"
                                        WidthRequest="40" />
                                    <ImageButton
                                        x:Name="TestGalleryButton7"
                                        Clicked="OnSelectBodyImageClicked"
                                        HeightRequest="40"
                                        Source="Icons/folder_open_regular_24.png"
                                        WidthRequest="40" />
                                    <ImageButton
                                        x:Name="TestGalleryButton8"
                                        Clicked="SelectBodyFromApp_Clicked"
                                        HeightRequest="40"
                                        Source="Icons/folder_open_solid_24.png"
                                        WidthRequest="40" />
                                </HorizontalStackLayout>
                            </Grid>

                            <Grid Grid.Row="2" IsVisible="False">
                                <VerticalStackLayout
                                    x:Name="ChoiseForMaskMethod"
                                    HorizontalOptions="Start"
                                    Spacing="-10"
                                    VerticalOptions="Center">
                                    <RadioButton
                                        x:Name="StandartMask"
                                        CheckedChanged="RadioButton_CheckedChanged"
                                        Content="Mask"
                                        GroupName="MaskOption"
                                        IsChecked="False"
                                        TextColor="Black" />
                                    <RadioButton
                                        x:Name="AIv1"
                                        CheckedChanged="RadioButton_CheckedChanged"
                                        Content="AIv1"
                                        GroupName="MaskOption"
                                        IsChecked="False"
                                        TextColor="Black" />
                                    <RadioButton
                                        x:Name="AIv2"
                                        CheckedChanged="RadioButton_CheckedChanged"
                                        Content="AIv2"
                                        GroupName="MaskOption"
                                        IsChecked="False"
                                        TextColor="Black" />
                                    <RadioButton
                                        x:Name="AIv3"
                                        CheckedChanged="RadioButton_CheckedChanged"
                                        Content="AIv3"
                                        GroupName="MaskOption"
                                        IsChecked="False"
                                        TextColor="Black" />
                                </VerticalStackLayout>

                                <VerticalStackLayout
                                    Margin="10,0,0,0"
                                    HorizontalOptions="End"
                                    Spacing="20"
                                    VerticalOptions="Center">
                                    <ImageButton
                                        x:Name="ClosedJacketImageButton"
                                        BackgroundColor="White"
                                        BorderColor="#444"
                                        BorderWidth="2"
                                        Clicked="ClosedJacketImageButton_Clicked"
                                        CommandParameter="closed_jacket"
                                        CornerRadius="8"
                                        HeightRequest="50"
                                        IsEnabled="False"
                                        IsVisible="False"
                                        Source="closed_jacket.png"
                                        WidthRequest="50" />
                                    <ImageButton
                                        x:Name="OpenJacketImageButton"
                                        BackgroundColor="White"
                                        BorderColor="#444"
                                        BorderWidth="2"
                                        Clicked="OpenJacketImageButton_Clicked"
                                        CornerRadius="8"
                                        HeightRequest="50"
                                        IsEnabled="False"
                                        IsVisible="False"
                                        Source="open_jacket.png"
                                        WidthRequest="50" />

                                    <ImageButton
                                        x:Name="DressButton"
                                        BackgroundColor="White"
                                        BorderColor="#444"
                                        BorderWidth="2"
                                        Clicked="MacroButton_Clicked"
                                        CommandParameter="dress"
                                        CornerRadius="8"
                                        HeightRequest="50"
                                        IsEnabled="False"
                                        IsVisible="False"
                                        Source="Macros/icons_dress.png"
                                        WidthRequest="50" />
                                </VerticalStackLayout>
                            </Grid>

                            <StackLayout Grid.Row="2">
                                <Frame
                                    Padding="0"
                                    BackgroundColor="LightGray"
                                    BorderColor="Black"
                                    HasShadow="True"
                                    HorizontalOptions="End"
                                    VerticalOptions="CenterAndExpand">
                                    <Frame.Shadow>
                                        <Shadow
                                            Brush="Black"
                                            Opacity="0.99"
                                            Radius="10"
                                            Offset="3, 3" />
                                    </Frame.Shadow>
                                    <CarouselView
                                        x:Name="JacketCarousel"
                                        HeightRequest="300"
                                        ItemsSource="{Binding Jackets}"
                                        Loop="True"
                                        PeekAreaInsets="90"
                                        WidthRequest="60">
                                        <CarouselView.ItemsLayout>
                                            <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                                        </CarouselView.ItemsLayout>
                                        <CarouselView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Image
                                                        Aspect="AspectFit"
                                                        HeightRequest="70"
                                                        HorizontalOptions="Center"
                                                        Source="{Binding ImagePath}"
                                                        VerticalOptions="Center"
                                                        WidthRequest="60">
                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding BindingContext.SelectJacketCommand, Source={x:Reference JacketCarousel}}" CommandParameter="{Binding ImagePath}" />
                                                        </Image.GestureRecognizers>
                                                    </Image>
                                                </Grid>
                                            </DataTemplate>
                                        </CarouselView.ItemTemplate>
                                    </CarouselView>
                                </Frame>
                            </StackLayout>

                            <Grid Grid.Row="3" Padding="-20">
                                <Frame
                                    Margin="20"
                                    BackgroundColor="#80000000"
                                    BorderColor="Black"
                                    CornerRadius="5"
                                    HasShadow="True"
                                    HeightRequest="300"
                                    WidthRequest="200">
                                    <Frame.Shadow>
                                        <Shadow
                                            Brush="Black"
                                            Opacity="0.99"
                                            Radius="10"
                                            Offset="3, 3" />
                                    </Frame.Shadow>
                                    <Image
                                        x:Name="SelectedBodyImage"
                                        Aspect="AspectFill"
                                        HeightRequest="300"
                                        IsVisible="True"
                                        Source="Icons/blank_image_photo.png"
                                        WidthRequest="200" />

                                </Frame>
                            </Grid>
                        </Grid>
                    </Grid>

                    <VerticalStackLayout
                        x:Name="ButtonPanel"
                        Padding="5"
                        IsVisible="False"
                        VerticalOptions="End">
                        <Label
                            Margin="10"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            Text="Choice normal body photo for FashionV1-AI mask and select zones for change."
                            TextColor="Black" />
                        <Frame Padding="2" BorderColor="Gray">
                            <Grid
                                ColumnDefinitions="*,*,*,*"
                                ColumnSpacing="2"
                                RowDefinitions="*,*,*,*"
                                RowSpacing="4">
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Hat"
                                    Text="Hat"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Hair"
                                    Text="Hair"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Face"
                                    Text="Face"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Sunglasses"
                                    Text="Sunglasses"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Upper-clothes"
                                    Text="Upper-clothes"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Skirt"
                                    Text="Skirt"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Dress"
                                    Text="Dress"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Belt"
                                    Text="Belt"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Pants"
                                    Text="Pants"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Left-arm"
                                    Text="L-arm"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Right-arm"
                                    Text="R-arm"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Left-leg"
                                    Text="L-leg"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Right-leg"
                                    Text="R-leg"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Scarf"
                                    Text="Scarf"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Left-shoe"
                                    Text="L-shoe"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="3"
                                    BackgroundColor="Black"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="Right-shoe"
                                    Text="R-shoe"
                                    TextColor="Red" />
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout
                        x:Name="ButtonPanel2"
                        Padding="5"
                        IsVisible="False"
                        VerticalOptions="End">
                        <Label
                            Margin="10"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            Text="Choice normal body photo for FashionV2-AI mask and select zones for change."
                            TextColor="Black" />
                        <Frame Padding="2" BorderColor="Gray">
                            <Grid
                                ColumnDefinitions="*,*,*,*"
                                ColumnSpacing="2"
                                RowDefinitions="*,*,*,*,*"
                                RowSpacing="4">
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="coat"
                                    Text="Coat"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="jacket"
                                    Text="Jacket"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="cardigan"
                                    Text="Cardigan"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="vest"
                                    Text="Vest"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="sweater"
                                    Text="Sweater"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="hood"
                                    Text="Hood"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="shirt, blouse"
                                    Text="Shirt, blouse"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="top, t-shirt, sweatshirt"
                                    Text="Top, t-shirt, sweatshirt"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="sleeve"
                                    Text="Sleeve"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="dress"
                                    Text="Dress"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="jumpsuit"
                                    Text="Jumpsuit"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="cape"
                                    Text="Cape"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="pants"
                                    Text="Pants"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="shorts"
                                    Text="Shorts"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="skirt"
                                    Text="Skirt"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="3"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="tights, stockings"
                                    Text="Tights, stockings"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="sock"
                                    Text="Sock"
                                    TextColor="Red" />
                                <Button
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    BackgroundColor="LightBlue"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
                                    CommandParameter="shoe"
                                    Text="Shoe"
                                    TextColor="Red" />
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout
                        x:Name="ButtonPanel3"
                        Padding="5"
                        IsVisible="False"
                        VerticalOptions="End">
                        <Label
                            Margin="10"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            Text="Choice normal body photo for Segformer B2-AI mask and select zones for change."
                            TextColor="Black" />
                        <Frame Padding="2" BorderColor="Gray">
                            <Grid
                                ColumnDefinitions="*,*,*,*"
                                ColumnSpacing="2"
                                RowDefinitions="*,*,*,*"
                                RowSpacing="4">
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    BackgroundColor="Orange"
                                    BorderColor="Red"
                                    BorderWidth="2"
                                    Clicked="OptionButton_Clicked"
