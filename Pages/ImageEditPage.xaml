<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FashionApp.Pages.ImageEditPage"
             Title="ImageEditPage"
             BackgroundColor="Black">
    <Grid>
        <!-- Показва избраната снимка в цял екран -->
        <Image 
            x:Name="ImageForEdit" 
            Aspect="AspectFill" />
        <GraphicsView
            x:Name="DrawingView"
            IsVisible="False"
            StartInteraction="OnStartInteraction"
            DragInteraction="OnDragInteraction"
            EndInteraction="OnEndInteraction"
            HorizontalOptions="Start"
            VerticalOptions="Start"/>
        <!-- Overlay с бутоните Delete и Close -->
        <!-- Top overlay with image name -->
        <StackLayout
             Orientation="Horizontal"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="Start"
             BackgroundColor="#80000000"
             Padding="10"
             Spacing="20">
            <Label
                x:Name="ImageName"
                TextColor="White"
                BackgroundColor="Transparent"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>

        <!-- Bottom overlay with buttons -->
        <StackLayout
             Orientation="Horizontal"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="End"
             BackgroundColor="#80000000"
             Padding="10"
             Spacing="20">
            <Button
            Text="Save"
            TextColor="White"
            BackgroundColor="Transparent"
            HorizontalOptions="Start"
            Clicked="OnSaveImageClicked"/>
            <Button
            Text="Clear"
            TextColor="White"
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            Clicked="OnClearClicked"/>
            <Button
            Text="Undo"
            TextColor="White"
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            Clicked="OnUndoClicked"/>
            <Button
            Text="Close"
            TextColor="White"
            BackgroundColor="Transparent"
            HorizontalOptions="EndAndExpand"
            Clicked="CloseButton_Clicked" />
        </StackLayout>
    </Grid>
</ContentPage>